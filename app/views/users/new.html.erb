<div class="balloon">
  <h1><%= t("users.sign_up_as_new_user") %></h1>  
</div>
<div class="arrow">&nbsp;</div>

<div class="item">

<a href="http://gravatar.com" target="_blank"><%= t("ui.get_an_gravatar_here") %></a>

<% @user.password = @user.password_confirmation = nil %>

<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>
<p><%= label_tag t("ui.login_name") %><br/>
<%= f.text_field :login %></p>

<%if(!SHOW_ACTIVATION_LINK)%>
	<p>activation account link will be emailed to you, please enter a real email address</p>
<%end%>

<p class="out_of_screen"><%= label_tag "important" %><%= f.text_field :something %></p>

<p><%= label_tag t("ui.email") %><br/>
<%= f.text_field :email %></p>

<p><%= label_tag t('ui.email_confirmation') %><br/>
<%= f.text_field :email_confirmation %></p>

<p><%= label_tag t("ui.name") %><br/>
<%= f.text_field :name %></p>

<p><%= label_tag t("ui.password") %><br/>
<%= f.password_field :password %></p>

<p><%= label_tag t('ui.password_confirmation') %><br/>
<%= f.password_field :password_confirmation %></p>

<p><%= label_tag t('ui.time_zone') %><br/>
<%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones %></p>

<p><%= submit_tag t('ui.signup') %></p>
<% end -%>
</div>